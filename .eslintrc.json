{
  "extends": [
    "next/core-web-vitals",
    "plugin:react/recommended"
  ],
  "rules": {
    "react/react-in-jsx-scope": "off", // Not needed in Next.js
    "no-console": "warn", // Warn on console usage
    "semi": ["error", "never"], // Enforce no semicolons
    "quotes": ["error", "single"], // Enforce single quotes
    "jsx-quotes": ["error", "prefer-double"], // Enforce double quotes in JSX
    "react/jsx-uses-react": "off", // Not needed in Next.js
    "react/jsx-uses-vars": "error", // Prevent variables used in JSX from being marked as unused
    "react-hooks/rules-of-hooks": "error", // Checks rules of Hooks
    "react-hooks/exhaustive-deps": "warn" // Checks effect dependencies
  },
  "plugins": [
    // "react-hooks"
  ],
  "env": {
    "browser": true,
    "node": true
  }
}